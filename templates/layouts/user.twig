<!doctype html>
<html lang="en">

<head>
    <title>{% block title %}{% endblock %}</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Compress CSS -->
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/css/adminlte.min.css">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</head>

<body>
<div class="wrapper">
    {% include("partials/user.nav.twig") %}
    <div class="container">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{% block page_title %}{% endblock %}</h1>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="content">
            <div class="container">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
</div>
<script src="/js/app.js"></script>
<script>
    SmoothScroll({stepSize: 20});
    {% for error in flash('error') %}
    $.notify({
        // options
        message: '{{ error }}'
    }, {
        // settings
        type: 'danger'
    });
    {% endfor %}
    {% for info in flash('info') %}
    $.notify({
        // options
        message: '{{ info }}'
    }, {
        // settings
        type: 'info'
    });
    {% endfor %}
    {% for info in flash('success') %}
    $.notify({
        // options
        message: '{{ info }}'
    }, {
        // settings
        type: 'success'
    });
    {% endfor %}
</script>
{% block scripts %}{% endblock %}
</body>
</html>
