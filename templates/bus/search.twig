{% extends "/layouts/bus.twig" %}
{% block title %}iBus{% endblock %}

{% block page_title %}Bus Reservation{% endblock %}

{% block content %}
    <!-- SmartWizard html -->
    <form class="" id="bus" action="{{ path_for('busSearch') }}" method="get">
        <div class="row animated fadeInDown">
            <div class="col-lg-4 offset-lg-4">
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Search</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Destination</label>
                                <select class="form-control" name="from">
                                    <option value="1">礁溪 → 蘭陽校園</option>
                                    <option value="2">蘭陽校園 → 礁溪</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control float-right" id="reservation"
                                           readonly="readonly" name="date" value="">
                                </div>
                                <!-- /.input group -->
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-info float-right">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </form>
{% endblock %}
{% block scripts %}
    <script>
        $('#reservation').flatpickr({
            minDate: 'today',
            defaultDate: 'today'
        });

    </script>
{% endblock %}