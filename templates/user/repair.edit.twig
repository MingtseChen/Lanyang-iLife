{% extends "/layouts/repair.twig" %}
{% block title %}iRepair{% endblock %}

{% block page_title %}資料修改{% endblock %}

{% block content %}
    <!-- SmartWizard html -->
    <form class="" id="repair" action="{{ path_for('repairEdit',{'id': item.id}) }}" method="POST"
          enctype="multipart/form-data">
        <div id="smartwizard" class="animated fadeInDown mb-5">
            <ul>
                <li><a href="#step-1">Step 1<br/>
                        <small>選擇區域及類別</small>
                    </a></li>
                <li><a href="#step-2">Step 2<br/>
                        <small>修改詳細資料</small>
                    </a></li>
            </ul>

            <div>
                <div id="step-1" class="">
                    <h3 class="border-bottom border-gray pb-2">選擇區域及類別</h3>
                    <div class="col">
                        <div class="card card-info card-outline">
                            <div class="card-body m-1">
                                <div class="form-group row">
                                    <label for="name" class="col-sm-2 col-form-label">報修人/Name</label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="name" value="{{ _session.name }}"
                                               readonly>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">館別/Building</label>
                                    <div class="col-sm my-auto">
                                        {% for building in buildings %}
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label">
                                                    {% if loop.first %}
                                                        <input class="form-check-input" type="radio" name="building"
                                                               id="building" value="{{ building.id }}" checked>
                                                    {% else %}
                                                        <input class="form-check-input" type="radio" name="building"
                                                               id="building" value="{{ building.id }}">
                                                    {% endif %}
                                                    {{ building.building_name }} ({{ building.building_char }})
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="room" class="col-sm-2 col-form-label">所在位置/Room No.<span
                                                style="color: red;">*</span></label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="room" name="room"
                                               value="{{ item.location }}" required>
                                        <div class="invalid-feedback">
                                            必填
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <tbody>
                                        {% for category in categories %}
                                            <tr>
                                                <td><input type="radio" name="item_cat"
                                                           value="{{ category.id }}" {{ item.item_cat ==  category.id ? "checked":"" }}
                                                           title="radio">
                                                    {{ category.cat_name }}
                                                </td>
                                                <td>{{ category.work_desc }}</td>
                                                <td>{{ category.admin_name }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="step-2" class="">
                    <h3 class="border-bottom border-gray pb-2">修改詳細資料</h3>
                    <div class="col">
                        <div class="card card-info card-outline">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="item" class="col-sm-2 col-form-label">物品名稱/Item<span
                                                style="color: red;">*</span></label>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control" id="item" name="item"
                                               value="{{ item.item }}">
                                        <div class="invalid-feedback">
                                            必填
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="desc">狀況描述/Description</label>
                                    <textarea class="form-control" id="desc" rows="3"
                                              name="desc">{{ item.item_desc }}</textarea>
                                </div>
                                <div class="form-group">
                                    <label class="">維修條件/Options</label>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="radio" name="accompany"
                                                   value="0" {{ item.request_need_accompany ==  false ? "checked":"" }}>
                                            報修人不在時，維修人員可直接進入/Anytime
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="radio" name="accompany"
                                                   value="1" {{ item.request_need_accompany ==  true ? "checked":"" }}>
                                            報修人不在時，請宿舍幹部陪同維修人員進入/Enter with Dorm Manager
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" name="confirm"
                                                   value="true" {{ item.request_need_confirm ==  true ? "checked":"" }}>
                                            將至維修人員辦公室確認問題及維修時間/Confirm with Staff
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="" class="col-sm-2 col-form-label">上傳照片</label>
                                    <div class="col-sm-3">
                                        <input type="file" class="form-control" id="file" name="file">
                                        <small class="form-text text-muted">僅接受JPEG/PNG檔案，並小於2M</small>
                                        <div class="invalid-feedback">檔案格式錯誤或</div>
                                        {#{% if  is defined %}#}
                                        {#<div style="color: red;">檔案大於2M</div>#}
                                        {#{% endif %}#}
                                    </div>
                                </div>
                                <div class="callout callout-info">
                                    <h5>注意事項</h5>
                                    <ul>
                                        <li>請先看看您要報修的品項是否已經有人填報而在處理中了哦!</li>
                                        <li>請務必選取品項分類,以便聯絡各負責人!</li>
                                        <li>為加速寢室內設備修繕速度，請登錄後至CL312找承辦人員了解及協調修繕時間。</li>
                                        <li>依個資保護法規定，本表單各項資料係僅作為線上報修之用，絕不轉做其他用途，將於資料處理完畢且保留至期限後，逕行銷毀。</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
{% block scripts %}
    <script>
        $(document).ready(function () {
            var validator = $("#repair").validate({
                rules: {
                    // simple rule, converted to {required:true}
                    room: "required",
                    item: "required",
                    file: {
                        accept: "image/*",
                    }
                },
                errorPlacement: function (error, element) {
                    element.closest("input").addClass('is-invalid');
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).closest("input").addClass("is-invalid").removeClass("is-valid");
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).closest("input").addClass("is-valid").removeClass("is-invalid");
                }
            });


            $("#smartwizard").on("showStep", function (e, anchorObject, stepNumber, stepDirection, stepPosition) {
                //alert("You are on step "+stepNumber+" now");
                if (stepPosition === 'final') {
                    $(".btn-finish").show();
                } else {
                    $(".btn-finish").hide();
                }
            });
            $("#smartwizard").on("leaveStep", function (e, anchorObject, stepNumber, stepDirection) {
                if (stepDirection === 'forward' && stepNumber === 0) {
                    return validator.element("#room");
                }
                if (stepDirection === 'forward' && stepNumber === 1) {

                }
            });

            // Toolbar extra buttons
            var btnFinish = $('<button></button>').text('送出')
                .addClass('btn btn-info btn-finish')
                .on('click', function () {
                    return validator.valid();
                    $("#repair").submit();
                });

            var btnReturn = $('<button></button>').text('取消')
                .addClass('btn btn-default')
                .on('click', function (event) {
                    event.preventDefault();
                    location.href = "{{ base_url()~path_for('repairStatus') }}";
                });

            // Smart Wizard
            $('#smartwizard').smartWizard({
                selected: 0,
                theme: 'dots',
                transitionEffect: 'fade',
                showStepURLhash: false,
                transitionSpeed: 500,
                anchorSettings: {
                    anchorClickable: true, // Enable/Disable anchor navigation
                    enableAllAnchors: false, // Activates all anchors clickable all times
                    markDoneStep: true, // add done css
                    enableAnchorOnDoneStep: true // Enable/Disable the done steps navigation
                },
                toolbarSettings: {
                    toolbarPosition: 'bottom',
                    toolbarExtraButtons: [btnReturn, btnFinish]
                },
                ajaxSettings: {}

            });
        });
    </script>
{% endblock %}